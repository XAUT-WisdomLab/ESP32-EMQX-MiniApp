{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [
		{
			"path": "pages/home/home",
			"style": {
				"navigationBarTitleText": "小程序控制设备测试",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/data/data",
			"style": {
				"navigationBarTitleText": "测试读取数据",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/control/control",
			"style": {
				"navigationBarTitleText": "测试控制设备",
				"enablePullDownRefresh": false
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "小程序控制设备测试",
		"navigationBarBackgroundColor": "#ffc670",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {}
}
